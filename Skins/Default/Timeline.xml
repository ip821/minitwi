      </HorizontalContainer>
      <HorizontalContainer>
        <TextColumn Name="UserDisplayName"/>
        <TextColumn Name="UserName"/>
        <TextColumn Name="RelativeTime" HorizontalAlignment="right"/>
      </HorizontalContainer>
      <TextColumn Name="Text" TextWrap="true"/>
      <VerticalContainer>
        <!--Dynamic url columns-->
      </VerticalContainer>
      <HorizontalContainer>
        <!--Dynamic image columns-->
      </HorizontalContainer>
    </VerticalContainer>
  </HorizontalContainer>
</SkinLayout>
